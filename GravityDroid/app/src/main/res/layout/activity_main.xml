<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main"
    android:id="@+id/"
    android:background="@drawable/background_converted">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlanet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/planet_converted" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCall"
        android:background="@drawable/phone_converted"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFb"
        android:background="@drawable/facebook_converted"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonPlanet" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTwitter"
        android:background="@drawable/twitter_converted"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonPlanet" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMail"
        android:background="@drawable/email_converted"
        android:layout_alignTop="@+id/buttonTwitter"
        android:layout_alignParentRight="true" />
</RelativeLayout>
